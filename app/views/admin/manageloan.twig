						</a>
					</div>
				</div>
			</div>

			<div class="rounded border-l-8 col-span-8 mt-3">
				<table class="table-auto border">
					<tr>
						<th class="p-3">Total Applied Loan:</th>
						<td>{{user.total_loan}}</td>
					</tr>
					<tr>
						<th class="p-3">First Name:</th>
						<td>{{user.firstname}}</td>
					</tr>
					<tr>
						<th class="p-3">Last Name:</th>
						<td>{{user.lastname}}</td>
					</tr>
					<tr>
						<th class="p-3">Email:</th>
						<td>{{user.email}}</td>
					</tr>
					<tr>
						<th class="p-3">Phone Number:</th>
						<td>{{user.phone}}</td>
					</tr>
					<tr>
						<th class="p-3">Loan Number:</th>
						<td>{{loan.loannumber}}</td>
					</tr>
					<tr>
						<th class="p-3">Loan Amount:</th>
						<td>{{loan.amount}}</td>
					</tr>
				</table>
			</div>

			<div class="mt-3 col-span-2 w-5/12">
				<form action="#" method="post">
					<label for="numbers" class="font-lg">Manage Loan</label>
					<select class="form-control" id="status" name="status">
						<option value="0">Under Review</option>
						<option value="1">Approved</option>
						<option value="2">Rejected</option>
					</select>
					<input type="submit" value="submit" class="p-2 bg-red-200 mt-2">
				</form>
			</div>


		</div>
	</section>

{% endblock main %}
